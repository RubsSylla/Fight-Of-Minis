    }
}
/*******************************************************************************************************************************/
int test4(BITMAP* lancement, BITMAP* regles, BITMAP* options, BITMAP* conception, BITMAP*  buffer, BITMAP* image, BITMAP* fond)
{
    int k=0;
    while(!key[KEY_ESC])
    {
        while(k==0)
        {
            clear_bitmap(buffer);
            clear_bitmap(screen);
            blit(conception,screen,0,0,0,0,800,600);
            rectfill(buffer, 700, 570, 790, 590, blanc);
            textprintf_centre(buffer, font, 730, 585, marron, "%s", "RETOUR MENU");
            if(((mouse_y>=570)&&(mouse_y<=590))&&((mouse_x>=700)&&(mouse_x<=790)))
            {
                if(mouse_b & 1)
                {
                    menu(image, fond, buffer, lancement, regles, options, conception);
                    k=1;
                }
            }
            blit(buffer,screen,0,0,0,0,800,600);
        }
        return k;
    }
}
/*******************************************************************************************************************************/
void menu(BITMAP* image, BITMAP* fond, BITMAP* buffer, BITMAP* lancement, BITMAP* regles, BITMAP* options, BITMAP* conception)
{
    clear_bitmap(fond);
    int a=0;

    if(((mouse_x>=300)&&(mouse_x<=500))&&((mouse_y>=100)&&(mouse_y<=150)))
    {
        rectfill(fond,300,100,500,150,marron);
        textprintf_centre(fond,font,400,120,blanc,"%s","LANCEMENT PARTIE");
        blit(image,screen,0,0,0,0,800,600);
        blit(fond,buffer,0,0,0,0,800,600);
        if(mouse_b &1)
        {
            while(a!=1)
            {
                a=test1(lancement, regles, options, conception, buffer, image, fond);
                if(a==1)
                {
                    clear_bitmap(fond);
                    clear_bitmap(buffer);
                   affichageDeBase(fond, image, buffer);
                }
            }
        }
    }
    else
    {
        if(((mouse_x>=300)&&(mouse_x<=500))&&((mouse_y>=200)&&(mouse_y<=250)))
        {
            rectfill(fond,300,200,500,250,marron);
            textprintf_centre(fond,font,400,220,blanc,"%s","REGLES");
            blit(image,screen,0,0,0,0,800,600);
            blit(fond,buffer,0,0,0,0,800,600);
            if(mouse_b &1)
            {
                while(a!=1)
                {
                    a=test2(lancement, regles, options, conception, buffer, image, fond);
                    if(a==1)
                    {
                        clear_bitmap(fond);
                        clear_bitmap(buffer);
                        affichageDeBase(fond, image, buffer);
                    }
                }
            }
        }
        else
        {
            if(((mouse_x>=300)&&(mouse_x<=500))&&((mouse_y>=300)&&(mouse_y<=350)))
            {
                rectfill(fond,300,300,500,350,marron);
                textprintf_centre(fond,font,400,320,blanc,"%s","OPTIONS");
                blit(image,screen,0,0,0,0,800,600);
                blit(fond,buffer,0,0,0,0,800,600);
                if(mouse_b &1)
                {
                    while(a!=1)
                    {
                        a=test3(lancement, regles, options, conception, buffer, image, fond);
                        if(a==1)
                        {
                            clear_bitmap(fond);
                            clear_bitmap(buffer);
                            affichageDeBase(fond, image, buffer);
                        }
                    }
                }
            }
            else
            {
                if(((mouse_x>=300)&&(mouse_x<=500))&&((mouse_y>=400)&&(mouse_y<=450)))
                {
                    rectfill(fond,300,400,500,450,marron);
                    textprintf_centre(fond,font,400,420,blanc,"%s","CONCEPTION");
                    blit(image,screen,0,0,0,0,800,600);
                    blit(fond,buffer,0,0,0,0,800,600);
                    if(mouse_b &1)
                    {
                        while(a!=1)
                        {
                            a=test4(lancement, regles, options, conception, buffer, image, fond);
                            if(a==1)
                            {
                                clear_bitmap(fond);
                                clear_bitmap(buffer);
                                affichageDeBase(fond, image, buffer);
                            }
                        }
                    }
                }
                else
                {
                    affichageDeBase(fond, image, buffer);
                }
            }
        }
    }
    blit(buffer,screen,0,0,0,0,800,600);
}

/*******************************************************************************************************************************/
void affichageDeBase(BITMAP* fond, BITMAP* image, BITMAP* buffer)
{
    rect(screen,300,100,500,150,blanc);
    textprintf_centre(fond, font, 400,120,marron,"%s", "LANCEMENT PARTIE");
    rect(screen,300,200,500,250,blanc);
    textprintf_centre(fond, font, 400,220,marron,"%s", "REGLES");
    rect(screen,300,300,500,350,blanc);
    textprintf_centre(fond, font, 400,320,marron,"%s", "OPTIONS");
    rect(screen,300,400,500,450,blanc);
    textprintf_centre(fond, font, 400,420,marron,"%s", "CONCEPTION");
    blit(image,screen,0,0,0,0,800,600);
    blit(fond,buffer,0,0,0,0,800,600);
}
